{% extends 'bezoeker/bezoeker.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Training Factory</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a href="/sporten">Les Aanbod</a></li>
                    <li><a href="/regels">Gedrags Regels</a></li>
                    <li><a href="/contact">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/register"><span class=""></span> Registreren</a></li>
                    <li class="active"><a href="/login"><span class="glyphicon glyphicon-log-in"></span>  Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

{% endblock %}
{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {% if error is defined and not error is empty %}
        <div>{{ error.MessageKey | trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="example-wrapper">
        <h1>Login</h1>

        <form action="{{ path('login') }}" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Wachtwoord:</label>
            <input type="password" id="password" name="_password" />

            <input type="hidden" name="_target_path" value="/redirect/" />

            <button type="submit">Login</button>
        </form>


    </div>
{% endblock %}
