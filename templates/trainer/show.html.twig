{% block content %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ lesson.Time ? lesson.Time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ lesson.date ? lesson.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ lesson.location }}</td>
            </tr>
            <tr>
                <th>Max_persons</th>
                <td>{{ lesson.maxPersons }}</td>
            </tr>
        </tbody>
    </table>

