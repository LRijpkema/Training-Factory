{% extends 'bezoeker/bezoeker.html.twig' %}

{% block title %}Lessen Overzicht{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Training Factory</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a href="/member">Home</a></li>
                    <li class="active"><a href="#">Lessen</a></li>

                    <li><a href="/memberprofiel">Profiel</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span>  Log uit</a></li>
                </ul>
            </div>
        </div>
    </nav>

{% endblock %}

{% block content %}
    {{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div hidden class="form-group col-md-6">
            {{ form_label(form.password) }}
            {{ form_widget(form.password)}}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
        </div>
    </div>
    <div class="form-row">
        <div hidden class="form-group col-md-6">
            {{ form_label(form.hiring_date) }}
            {{ form_widget(form.hiring_date) }}
        </div>
        <div hidden class="form-group col-md-6">
            {{ form_label(form.salary) }}
            {{ form_widget(form.salary) }}
        </div>
    </div>
    <div class="form-row">
        <div hidden class="form-group col-md-6">
            {{ form_label(form.social_sec_number) }}
            {{ form_widget(form.social_sec_number) }}
        </div>
        <div class="form-group col-md-6">
            {{ form_label(form.street) }}
            {{ form_widget(form.street) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            {{ form_label(form.place) }}
            {{ form_widget(form.place) }}
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
    {{ form_end(form) }}

{% endblock %}
